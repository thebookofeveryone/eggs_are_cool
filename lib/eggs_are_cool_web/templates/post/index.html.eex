<div>
  <ul style="list-style: none">
    <%= for post <- @posts do %>
      <li>
      <div class="post-card" style="margin: 8vh 0vw">      
        <a href="<%= Routes.post_path(@conn, :show, post.id) %>">
          <h1><%= post.title %></h1>
          <p><%= String.slice(post.body, 0, 150) %>...</p>
        </a>
      </div>
      </li>
    <% end %>
  </ul>
</div>
